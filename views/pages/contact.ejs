<%- contentFor('head') %>
    <script src="https://cdn.emailjs.com/dist/email.min.js"></script>
    <script>
        (function () {
            // EmailJS user ID
            emailjs.init("YOUR_EMAILJS_PUBLIC_KEY"); // Replace with your actual public key
        })();
    </script>

    <%- contentFor('body') %>

        <div class="container">
            <section class="hero-section text-center mb-5">
                <h1 class="display-4 animate__animated animate__fadeInDown">Contact Me</h1>
                <p class="lead animate__animated animate__fadeInUp">Let's discuss your project or potential
                    collaboration
                </p>
            </section>

            <section class="contact-content mb-5">
                <div class="row">
                    <div class="col-md-6 mb-4 mb-md-0">
                        <div class="contact-info animate__animated animate__fadeInLeft">
                            <h2 class="mb-4">Get In Touch</h2>
                            <p>Feel free to reach out to me about collaborations, project inquiries, or just to say
                                hello!
                            </p>

                            <div class="mt-4">
                                <div class="d-flex align-items-center mb-3">
                                    <i class="fas fa-envelope text-primary me-3 fa-2x"></i>
                                    <div>
                                        <h5 class="mb-0">Email</h5>
                                        <p class="mb-0">hoaifong@example.com</p>
                                    </div>
                                </div>

                                <div class="d-flex align-items-center mb-3">
                                    <i class="fas fa-phone text-primary me-3 fa-2x"></i>
                                    <div>
                                        <h5 class="mb-0">Phone</h5>
                                        <p class="mb-0">+84 123 456 789</p>
                                    </div>
                                </div>

                                <div class="d-flex align-items-center mb-3">
                                    <i class="fas fa-map-marker-alt text-primary me-3 fa-2x"></i>
                                    <div>
                                        <h5 class="mb-0">Location</h5>
                                        <p class="mb-0">Ho Chi Minh City, Vietnam</p>
                                    </div>
                                </div>
                            </div>

                            <div class="social-links mt-4">
                                <h5>Find me on</h5>
                                <div class="d-flex mt-2">
                                    <a href="https://github.com/HoaiFongg" target="_blank"
                                        class="btn btn-outline-primary me-2">
                                        <i class="fab fa-github"></i> GitHub
                                    </a>
                                    <a href="https://www.linkedin.com/in/ho%C3%A0i-phong-ph%E1%BA%A1m-nguy%E1%BB%85n-5b0bb626a/"
                                        target="_blank" class="btn btn-outline-primary me-2">
                                        <i class="fab fa-linkedin"></i> LinkedIn
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="contact-form animate__animated animate__fadeInRight">
                            <div class="card">
                                <div class="card-body p-4">
                                    <h2 class="mb-4">Send a Message</h2>
                                    <form id="contactForm">
                                        <div class="mb-3">
                                            <label for="name" class="form-label">Your Name</label>
                                            <input type="text" class="form-control" id="name" name="user_name"
                                                placeholder="Enter your name" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="email" class="form-label">Email Address</label>
                                            <input type="email" class="form-control" id="email" name="user_email"
                                                placeholder="name@example.com" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="subject" class="form-label">Subject</label>
                                            <input type="text" class="form-control" id="subject" name="subject"
                                                placeholder="Subject of your message">
                                        </div>
                                        <div class="mb-3">
                                            <label for="message" class="form-label">Message</label>
                                            <textarea class="form-control" id="message" name="message" rows="5"
                                                placeholder="Write your message here" required></textarea>
                                        </div>
                                        <button type="submit" class="btn btn-primary w-100">
                                            <span class="spinner-border spinner-border-sm d-none me-2"
                                                id="submitSpinner" role="status" aria-hidden="true"></span>
                                            Send Message
                                        </button>
                                        <div class="alert alert-success mt-3 d-none" id="successMessage">
                                            Your message has been sent successfully! I'll get back to you soon.
                                        </div>
                                        <div class="alert alert-danger mt-3 d-none" id="errorMessage">
                                            Sorry, there was a problem sending your message. Please try again later.
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <section class="map-section mb-5">
                <h2 class="text-center mb-4 animate__animated animate__fadeInUp">My Location</h2>
                <div class="ratio ratio-21x9 animate__animated animate__fadeIn">
                    <iframe
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d251637.95196238213!2d106.6930628694036!3d10.754939874307602!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x317529292e8d3dd1%3A0xf15f5aad773c112b!2sHo%20Chi%20Minh%20City%2C%20Vietnam!5e0!3m2!1sen!2sus!4v1648285456246!5m2!1sen!2sus"
                        width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </section>
        </div>

        <%- contentFor('scripts') %>
            <script>
                document.addEventListener('DOMContentLoaded', function () {
                    const contactForm = document.getElementById('contactForm');
                    const submitSpinner = document.getElementById('submitSpinner');
                    const successMessage = document.getElementById('successMessage');
                    const errorMessage = document.getElementById('errorMessage');

                    if (contactForm) {
                        contactForm.addEventListener('submit', function (event) {
                            event.preventDefault();

                            // Show spinner, hide messages
                            submitSpinner.classList.remove('d-none');
                            successMessage.classList.add('d-none');
                            errorMessage.classList.add('d-none');

                            // Send form using EmailJS
                            emailjs.sendForm('YOUR_SERVICE_ID', 'YOUR_TEMPLATE_ID', this)
                                .then(function () {
                                    // Hide spinner, show success
                                    submitSpinner.classList.add('d-none');
                                    successMessage.classList.remove('d-none');
                                    contactForm.reset();
                                }, function (error) {
                                    // Hide spinner, show error
                                    submitSpinner.classList.add('d-none');
                                    errorMessage.classList.remove('d-none');
                                    console.error('EmailJS error:', error);
                                });
                        });
                    }
                });
            </script>