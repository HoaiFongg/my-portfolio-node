<!-- Navbar -->
<header class="navbar navbar-expand-lg sticky-top">
    <div class="container">
        <a class="navbar-brand" href="/">
            <i class="fas fa-code me-2"></i>
            <span data-i18n="site-name">DataDev</span>
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <i class="fas fa-bars text-white"></i>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link <%= typeof activeTab !== 'undefined' && activeTab === 'home' ? 'active' : '' %>"
                        href="/">
                        <i class="fas fa-home me-1 d-none d-sm-inline-block"></i>
                        <span data-i18n="nav-home">Home</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= typeof activeTab !== 'undefined' && activeTab === 'about' ? 'active' : '' %>"
                        href="/about">
                        <i class="fas fa-user me-1 d-none d-sm-inline-block"></i>
                        <span data-i18n="nav-about">About</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= typeof activeTab !== 'undefined' && activeTab === 'projects' ? 'active' : '' %>"
                        href="/projects">
                        <i class="fas fa-project-diagram me-1 d-none d-sm-inline-block"></i>
                        <span data-i18n="nav-projects">Projects</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= typeof activeTab !== 'undefined' && activeTab === 'blog' ? 'active' : '' %>"
                        href="/blog">
                        <i class="fas fa-blog me-1 d-none d-sm-inline-block"></i>
                        <span data-i18n="nav-blog">Blog</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= typeof activeTab !== 'undefined' && activeTab === 'contact' ? 'active' : '' %>"
                        href="/contact">
                        <i class="fas fa-envelope me-1 d-none d-sm-inline-block"></i>
                        <span data-i18n="nav-contact">Contact</span>
                    </a>
                </li>
                <li class="nav-item dropdown ms-lg-3">
                    <a class="nav-link dropdown-toggle" href="#" id="languageDropdown" role="button"
                        data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-globe me-1"></i> EN
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="languageDropdown">
                        <li><a class="dropdown-item" href="#" onclick="changeLanguage('en')">English</a></li>
                        <li><a class="dropdown-item" href="#" onclick="changeLanguage('vi')">Tiếng Việt</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</header>